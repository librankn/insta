<h1>投稿一覧</h1>

<table >
  <tr>
    <th>タイトル</th>
    <th>内容</th>
    <th>投稿者</th>
  </tr>
<br>
<% @igcls.each do |igcl| %>
  <tr>
    <td><%= igcl.title %></td>
    <td><%= igcl.content %></td>
    <td><%= igcl.user.name %></td>
    <br>
    <td><button type="button" class="btn btn-info btn-sm"><%= link_to '詳細', igcl_path(igcl.id) %></button>
    <button type="button" class="btn btn-warning btn-sm"><%= link_to "編集", edit_igcl_path(igcl.id) , data: { confirm: '本当に編集していいですか？' } %></button>
    <button type="button" class="btn btn-danger btn-sm"><%= link_to '削除', igcl_path(igcl.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></button></td>
  </tr>
  <br>
<% end %>
</table>

  <br>
<%= link_to '新規投稿', new_igcl_path, class: 'btn btn-default' %>