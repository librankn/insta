<%= form_with(model: @igcl, local: true ,url: choose_new_or_edit) do |form| %>
  <% if @igcl.errors.any? %>
    <div id="error_explanation">
      <h2><%= @igcl.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @igcl.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="igcl_title">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="igcl_title">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <%= form.submit %>
<% end %>

<%= link_to "ブログ一覧画面にもどる", igcls_path %>