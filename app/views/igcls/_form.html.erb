<div class = forms>
<%= form_with(model: @igcl, local: true ,url: choose_new_or_edit) do |form| %>
  <% if @igcl.errors.any? %>
    <div id="error_explanation">
      <h2><%= @igcl.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @igcl.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= form.label :title %>
    <br>
    <%= form.text_field :title %>
  </div>
  <div class="field">
    <%= form.label :content %>
    <br>
    <%= form.text_field :content %>
  </div>
  <div class="field">
    <%= form.label :image -%>
    <%= image_tag(@igcl.image.url) if @igcl.image.url -%>
    <%= form.file_field :image, class: "igcl_image" %>
    <%= form.hidden_field :image_cache %>
  </div>

  <%= form.submit "投稿する", class: "btn btn-warning actions" %>


<% end %>
</div>

<%= link_to "投稿一覧画面にもどる", igcls_path, class: "btn btn-default actions"  %>
